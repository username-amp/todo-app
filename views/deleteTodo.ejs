<%- include(`partials/header`) %>
    <div class="table-container">
        <h2 class="todo-title">Delete Todo</h2>
        <a href="/" class="btn">Back</a>

        <div class="confirm">
            <p>Are you sure you want to delete this todo: <strong><%= todo.title %></strong>?</p>
            <form action="/delete-todo/<%= todo._id %>" method="post">
                <button type="submit" class="btn">Yes</button>
            </form>
            <a href="/" class="btn">No</a>
        </div>
    </div>
